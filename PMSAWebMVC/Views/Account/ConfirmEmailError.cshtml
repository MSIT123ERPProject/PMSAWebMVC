@{
    ViewBag.Title = "驗證失敗";
    Layout = "~/Views/Account/_LoginLayout.cshtml";
}

<div class="container-fluid d-flex p-5" style="background-color: white;height: 95vh;width: 95vw; margin: 10px auto;align-items:center;flex-direction:column;">
    <h2>
        <img style="width:30px; transform: translateY(-3px)" src="data:image/svg+xml;base64," alt="" />
        @ViewBag.Title
    </h2>
    <p style="margin-top: 20px">
        您的驗證連結已失效，請聯絡系統管理員。
    </p>

    <a id="loginLink" href="@Url.Action("Login", "Account")" style="font-weight: 600;">
        回登入頁面
    </a>
</div>