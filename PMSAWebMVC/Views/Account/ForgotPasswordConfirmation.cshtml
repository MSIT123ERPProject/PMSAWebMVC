@{
    ViewBag.Title = "忘記密碼確認";
    Layout = "~/Views/Account/_LoginLayout.cshtml";
}

<div class="container-fluid card d-flex p-5" style="background-color: white;width: 50vw; margin: 10px auto;align-items:center;flex-direction:column;">

    <h2 class="font-weight-bold">
        <img width="55" style="transform: translate(-5px,-10px);" src="data:image/svg+xml;base64," alt="" />
        已將重設密碼寄送至信箱
    </h2>
    <hr style="height: 6px; width: 100%;margin:0 0 20px 0;" />
    <p>
        請檢查電子郵件以重設密碼。
    </p>
    <a href="@Url.Action("Login","Account")" class="font-weight-bold"><i class="fas fa-sign-in-alt"></i> 回登入頁面</a>
</div>

