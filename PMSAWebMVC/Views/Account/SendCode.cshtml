@model PMSAWebMVC.Models.SendCodeViewModel
@{
    ViewBag.Title = "傳送驗證碼";
    Layout = "~/Views/Account/_LoginLayout.cshtml";
}

<div class="container-fluid card d-flex p-5" style="background-color: white;width: 50vw; margin: 10px auto;align-items:center;flex-direction:column;">

    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <h2 style="font-weight:700;">
            <img width="55" style="transform: translateY(-4px);" src="data:image/svg+xml;base64," alt="" />
            傳送驗證碼
        </h2>
        <hr />
        <div class="col-12" style="border: 1px solid #eee;background-color: #eee; padding: 20px;">
            <p class="col-12" style="font-weight:700;">選取雙因素驗證提供者:</p>
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "form-control mt-3 mb-5" })
            <input type="submit" value="提交" class="col-12 btn btn-primary" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}