@model PMSAWebMVC.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "驗證";
    Layout = "~/Views/Account/_LoginLayout.cshtml";
}

<div class="container-fluid card d-flex p-5" style="background-color: white; width: 50vw; margin: 10px auto;align-items:center;flex-direction:column;">

    @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("provider", @Model.Provider)
        @Html.Hidden("rememberMe", @Model.RememberMe)
    <h2 style="font-weight:700;">
        <img width="40" style="transform: translateY(-1px);margin-right:5px;"  src="data:image/svg+xml;base64," alt="" />
        輸入驗證碼
    </h2>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div style="border: 1px solid #eee;background-color: #eee; padding: 20px;">
            <div class="form-group">
                <div class="col-12">
                    @Html.Label("安全碼", new { @class = "control-label",style = "font-weight:700;" })
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-12 mb-2">
                    <div class="checkbox custom-control custom-checkbox">
                        @Html.CheckBoxFor(m => m.RememberBrowser, new { @class = "custom-control-input" })
                        @Html.LabelFor(m => m.RememberBrowser, new { @class = "custom-control-label" })
                    </div>
                </div>
            </div>
            <div>
                <input type="submit" class="btn btn-primary" style="width:100%;" value="提交" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}