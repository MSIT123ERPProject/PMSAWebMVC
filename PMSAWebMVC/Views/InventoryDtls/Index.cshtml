@model IEnumerable<PMSAWebMVC.Models.InventoryDtl>

@{
    ViewBag.Title = "庫存明細";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        庫存明細
    </div>
    <div class="card-body">
        <a class="btn btn-warning" href='@Url.Action("Create")'>
            <i class="fa fa-plus"></i>新增
        </a>
        <div class="table-responsive">
            <br />
            <table class="table table-striped table-bordered" id="dataTable" cellspacing="0" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.WarehouseInfo.WarehouseName)
                        </th>
                        <th>
                            庫存分類名稱
                        </th>
                        <th>
                            貨源清單代碼
                        </th>
                        <th>
                            料件名稱
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitsOnStockOutOrder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitsOnStockInOrder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitsInStock)
                        </th>
                        <th>編輯</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WarehouseInfo.WarehouseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InventoryCategory.InventoryCategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SourceList.SourceListID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Part.PartName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitsOnStockOutOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitsOnStockInOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitsInStock)
                        </td>
                        <td>
                            <a class="btn btn-primary" href='@Url.Action("Edit", new { id = item.InventoryCode })'>
                                <i class="fa fa-edit">修改</i>
                            </a>|
                            <a class="btn btn-primary" href='@Url.Action("Details", new { id = item.InventoryCode })'>
                                <i class="fa fa-tasks">檢視</i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
@section scripts
{
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });

    $('#myInput').on('keyup', function () {
        table.search(this.value).draw();
    });
</script>

}
