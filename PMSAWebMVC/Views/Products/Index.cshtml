@section scripts
{
<script>
    function ChangeImgAndDivShow1() {
        var divObj = document.getElementsByName("category1")
        var imgObj = document.getElementsByName("icon1")
       

        for (var i = 0; i < divObj.length; i++)
        {
            if (divObj[i].style.display == "none")
            {
                divObj[i].style.display = "block";
                imgObj[i].src =`@Url.Content("~/images/negative.png")`;
            }
            else
            {
                divObj[i].style.display = "none";
                imgObj[i].src =`@Url.Content("~/images/plus.png")`;
