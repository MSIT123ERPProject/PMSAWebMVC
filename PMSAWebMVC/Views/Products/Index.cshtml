<h2>陸行鳥自行車</h2>

<div class="jumbotron">
    <h2>產品總覽</h2>
    <h6><span></span></h6>
</div>
<div class="row">
    @foreach (var product in Model)
    {
        var modalId = "modal-" + product.ProductOID;

        <div class="col-sm-6">
            <div id="pt1" class="img-thumbnail">
                <h3>產品編號:@product.ProductNumber</h3>
                <div class="galary">
                    <img class="productImg1" src="@Url.Content(product.PictureAdress)" alt="產品圖片" />
                </div>
                <div class="caption">
                    <p>產品名稱:@product.ProductName</p>
                    <p class=" deti">
                        <a href="#" class="btn btn-primary" role="button" data-toggle="modal" data-target="#@modalId" >詳細資訊</a>
                    </p>
                    <br />
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="@modalId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content qq">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">陸行鳥自行車</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h4>生產產品:</h4>
                        <hr />
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.ProductNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(p => product.ProductNumber)
                            </dd>

                            <dd class="img-thumbnail">
                                <img class="productImg2" src="@Url.Content(product.PictureAdress)" alt="產品圖片" />
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ProductName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(p => product.ProductName)
                            </dd>
                        </dl>
                        <hr />
                        <div>
                            <div>
                                <div>
                                    <div class="categorytitle">
                                        <img class="icon" id="icon1" name="icon1" src=@Url.Content("~/images/plus.png") onclick="ChangeImgAndDivShow1()" />
                                        輪組
                                    </div>
                                    <div class="category" id="category1" name="category1" style="display:none" >
                                        @foreach (var x in product.ProductPart)
                                        {

                                            foreach (var y in x.Part.PartCategoryDtl)
                                            {

                                                if (y.PartCategoryOID == 1)
                                                {
                                                    <div>@x.Part.PartName</div>
                                                    <div class="img-thumbnail"id="categoryImg"><img class="PartImg" id="PartImg"  src="@Url.Content(x.Part.PictureAdress)"  width="300" height="200" alt="產品料件圖片" /></div>
                                                    <br />
                                                }
                                            }

                                        }
                                    </div>
                                </div>
                                <hr />
                                <div>
                                    <div class="categorytitle"><img class="icon" name="icon2" id="icon2" src=@Url.Content("~/images/plus.png") onclick="ChangeImgAndDivShow2()" />
                                    傳動系統
                                    </div>
                                    <div class="category" id="category2" name="category2" style="display:none">
                                        @foreach (var x in product.ProductPart)
                                        {

                                            foreach (var y in x.Part.PartCategoryDtl)
                                            {

                                                if (y.PartCategoryOID == 2)
                                                {
                                                    <div>@x.Part.PartName</div>
                                                    <div class="img-thumbnail" style="display:block" id="categoryImg"><img class="PartImg" id="PartImg" src="@Url.Content(x.Part.PictureAdress)" width="300" height="200" alt="產品料件圖片" /></div>
                                                    <br />
                                                }
                                            }

                                        }
                                    </div>
                                </div>
                                <hr />
                                <div>
                                    <div class="categorytitle"><img class="icon" name="icon3" id="icon3" src=@Url.Content("~/images/plus.png") onclick="ChangeImgAndDivShow3()" />
                                    煞車系統
                                    </div>
                                    <div class="category" id="category3" name="category3" style="display:none">
                                        @foreach (var x in product.ProductPart)
                                        {

                                            foreach (var y in x.Part.PartCategoryDtl)
                                            {

                                                if (y.PartCategoryOID == 3)
                                                {
                                                    <div>@x.Part.PartName</div>
                                                    <div class="img-thumbnail" style="display:block" id="categoryImg"><img class="PartImg" id="PartImg" src="@Url.Content(x.Part.PictureAdress)" width="300" height="200" alt="產品料件圖片" /></div>
                                                    <br />
                                                }
                                            }

                                        }
                                    </div>
                                </div>
                                <hr />
                                <div>
                                    <div class="categorytitle"><img class="icon" name="icon4" id="icon4" src=@Url.Content("~/images/plus.png") onclick="ChangeImgAndDivShow4()" />
                                    配件裝置
                                    </div>
                                    <div class="category" id="category4" name="category4" style="display:none">
                                        @foreach (var x in product.ProductPart)
                                        {

                                            foreach (var y in x.Part.PartCategoryDtl)
                                            {

                                                if (y.PartCategoryOID == 4)
                                                {
                                                    <div>@x.Part.PartName</div>
                                                    <div class="img-thumbnail" style="display:block" id="categoryImg"><img class="PartImg" id="PartImg" src="@Url.Content(x.Part.PictureAdress)" width="300" height="200" alt="產品料件圖片" /></div>
                                                    <br />
                                                }
                                            }

                                        }
                                    </div>
                                </div>
                                <hr />
                                <div>
                                    <div class="categorytitle"><img class="icon" name="icon5" id="icon5" src=@Url.Content("~/images/plus.png") onclick="ChangeImgAndDivShow5()" />
                                    車體裝置
                                    </div>
                                    <div class="category" id="category5" name="category5" style="display:none">
                                        @foreach (var x in product.ProductPart)
                                        {

                                            foreach (var y in x.Part.PartCategoryDtl)
                                            {

                                                if (y.PartCategoryOID == 5)
                                                {
                                                    <div>@x.Part.PartName</div>
                                                    <div class="img-thumbnail" style="display:block" id="categoryImg"><img id="PartImg" class="PartImg" src="@Url.Content(x.Part.PictureAdress)" width="300" height="200" alt="產品料件圖片" /></div>
                                                    <br />
                                                }
                                            }

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

