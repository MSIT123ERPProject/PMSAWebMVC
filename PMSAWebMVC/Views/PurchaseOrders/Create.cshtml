            };

            //Modal已隱藏
            $('#detailModal').on('hidden.bs.modal', function (event) {
                $('#sldtl-items').slick('unslick');
            })

             //Modal已顯示
            $('#detailModal').on('shown.bs.modal', function (event) {
                //var button = $(event.relatedTarget) // Button that triggered the modal
