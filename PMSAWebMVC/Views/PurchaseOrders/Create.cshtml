                "progressBar": true,
            }

            $('#button-demo').click(function () {
                toastr.success("鐵人賽~大~~平~~台！");
            });

            $('#button-demo2').click(function () {
                toastr.info('<h1>鐵人賽</h1><p>大~~平~~台！</p>', '我只是DEMO');
            });

           // infinite: true 會造成 radio button 無法正常顯示 checked 狀態
            var slickOptions = {
                infinite: false,
                arrows: true,
                dots: true,
                fade: false,
