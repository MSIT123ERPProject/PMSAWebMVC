@model PMSAWebMVC.ViewModels.PurchaseOrders.POSendToSupplierViewModel.SendToSupplierViewModel

@section styles{
    <link href="~/Content/Views/_PurchaseOrdersDetailsPartial.css" rel="stylesheet" />
    <style>
    </style>
}

@{
    ViewBag.Title = "採購單答交";
}

<h2 class="text-dark">@ViewBag.Title</h2>

@using (Html.BeginForm("OrderCommitments", "PurchaseOrders", FormMethod.Post, new { @id = "formOrderCommitmentsPurchaseOrders" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.POItem.PurchaseOrderID)

    <h6 class="note note-editor text-muted small">確認內容無誤後，請點選<span class="text-danger">答交</span>按鈕，完成雙方採購單內容確認動作</h6>
    <div class="form-group">
        <button id="btnSubmit" type="button" class="btn btn-primary btn-lg"><i class="far fa-paper-plane"></i> 答交</button>
    </div>
}

@Html.Partial("_DetailsPartial")

@section scripts{
    <script src="~/Scripts/Views/_PurchaseOrdersDetailsPartial.js"></script>
    <script>
         toastr.options = {
                "closeButton": true,
                "progressBar": true,
            }

            //送出採購單
            $("body").on('click', '#btnSubmit', function (e) {
                e.preventDefault();
                e.stopPropagation();

                Swal.fire({
                    title: '送出確認',
                    text: "確定內容填寫正確並將採購單答交嗎？",
                    type: 'warning',
                    showCancelButton: true,
                    customClass: {
                        confirmButton: 'bg-primary',
                        cancelButton: 'bg-danger',
                    },
                    cancelButtonText: '取消',
                    confirmButtonText: '確定'
                }).then((result) => {
                    if (result.value) {
                        updatePOStatus();
                        }
                    })
            });

            async function updatePOStatus() {
              await  $.ajax({
                    type: "POST",
                    url: "@Url.Action("OrderCommitments", "PurchaseOrders")",
                  data: $("#formOrderCommitmentsPurchaseOrders").serialize(),
                }).done(function (result) {
                  if (result.status == "success") {
                        toastr.success(result.message);
                        setTimeout(function () {
                             location.href = '@Url.Action("Index", "PurchaseOrders")';
                        }, 1000);
                    }
                }).fail(function (e) {
                    toastr.error(e.responseText);
                });
            }
    </script>
}

