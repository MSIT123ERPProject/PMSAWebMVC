@section scripts
        {
    <script>
        $(document).ready(function () {
            dataTableDisplay();
        });
        function dataTableDisplay() {
            if ($.fn.DataTable.isDataTable("#dataTable")) {
                $("#dataTable").DataTable().destroy();
            }
            $('#dataTable').DataTable({
              "ajax": {
                    "url":  `@Url.Action("GetSourcelistBySupplierCode", "SupplierStocks")`,
                    "type": "GET",
                    "dataType": "json",
                  "data": { "supplierCode": "@ViewBag.supplierCode" },
                    "contentType": "application/json;charset=utf-8",
                    "cache": true
                },
                "columns": [
                    { "data": "SourceListID" },
                    { "data": "PartNumber" },
                    { "data": "QtyPerUnit" },
                    { "data": "UnitPrice" },
                    { "data": "UnitsOnOrder" },
                    { "data": "UnitsInStock" },
                    {
                        "data": "SourceListID",
                        "render": function (data, type, row, meta) {
                            return '<a class="btn btn-primary"'+' href="' + "@Url.Action( "Edit","SupplierStocks")" + "?id=" + data + '">調整庫存</a>';
                        }
                    }
                ],
                "lengthMenu": [[10, 25, 50, 75, 100, -1], [10, 25, 50, 75, 100, "All"]],
                "order": [[1, "desc"]],
            });
            //table.on('xhr', function () {
            //    var data = table.ajax.params();
            //    alert('Search term was:' + data.search.value );
            //});
        }
    </script>
}









